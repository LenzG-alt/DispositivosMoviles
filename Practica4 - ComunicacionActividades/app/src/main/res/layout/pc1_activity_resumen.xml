<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".PC1_ResumenActivity"
    android:orientation="vertical">

    <!-- Título -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titulo_Resumen"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <!-- Resumen de datos -->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#424244"
        android:padding="8dp"
        android:background="#F5F5F3"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="4dp" />

    <TextView
        android:id="@+id/tvEdad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#424242"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="4dp" />

    <TextView
        android:id="@+id/tvCiudad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#424242"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="4dp" />

    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#424242"
        android:padding="8dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="32dp"
        android:layout_marginHorizontal="4dp" />

    <!-- Botón Confirmar -->
    <Button
        android:id="@+id/btnConfirmar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnConfirmar"
        android:textColor="#FFFFFF"
        android:backgroundTint="#6200EE"
        android:padding="14dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp"/>

    <!-- Botón Volver -->
    <Button
        android:id="@+id/btnVolverEditar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnVolverEditar"
        android:textColor="#6200EE"
        android:backgroundTint="#E0E0E0"
        android:padding="14dp" />

</LinearLayout>

